---
// Library Imports
import i18next, { t, changeLanguage } from "i18next";
import { HeadHrefLangs } from "astro-i18next/components";
// Component Imports
import LMP from "../../components/LMP";
import HCGLevels from "../../components/HCGLevels";
import ExpectedDate from "../../components/ExpectedDate";
import Notes from "../../components/Notes";

changeLanguage("fr");
---

<html lang={i18next.language}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>Pregnancy Calculator & Assistant {t("lmpComponent.select")}</title>
    <HeadHrefLangs />
  </head>
  <body class="text-sky-900">
    <header class="container mx-auto px-2 max-w-4xl">
      <div class="py-6 lg:py-10 mx-auto">
        <div
          class="flex flex-col flex-wrap items-center py-5 border-t border-b border-sky-200"
        >
          <a href="#"> Pregnancy Calculator & Assistant</a>
        </div>
      </div>
    </header>
    <section class="container mx-auto px-2 pb-2 mb-2 max-w-4xl">
      <div class="mx-auto py-10">
        <main>
          <!-- TODO :: Add ovulation calculator -->
          <!-- <LMP client:load /> -->
          <LMP client:only="react" />
          <HCGLevels client:visible />
          <ExpectedDate client:visible />
          <Notes client:visible />
        </main>
      </div>
    </section>
    <footer class="container mx-auto px-2 max-w-4xl">
      <div class="py-6 lg:py-10 mx-auto">
        <div
          class="flex flex-col flex-wrap items-center py-5 border-t border-b border-sky-200"
        >
          &copy; 2023 Pregnancy Calculator & Assistant
        </div>
      </div>
    </footer>
  </body>
</html>
